DETOX SHOW PAGE 

<!DOCTYPE html>
<html lang="en">
<head>
   <%- include ('./partials/head.ejs') %>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"     integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
   <link rel="stylesheet" href="/styles/nav.css">
   <link rel="stylesheet" href="/styles/home.css">
   <link rel="stylesheet" href="/styles/showPages.css">

</head>
<body>
    <%- include ('./partials/nav.ejs') %>
    <div>
        <h1 class="starting-text">DETOX PREP BOX</h1> 
    </div>
        <ul class="flex-container">
            <%for(let detox of detoxs) {%>
                <li class="meal-items">
                        <h2 class="dinner-day"><%= detox.name %></h2> 
                        <br />
                        <h4 class="dinner-name"><%= detox.dinner %></h4>
                        <br />
                        <a href="/detox/<%=detox._id%>">
                            <img src= <%= detox.images %> height="300" width="400">
                        </a>
                        
                            <div class="content-container">
                                <p><b>2 Meals</b></p> 
                                <p><b>1 Snack</b></p>  
                                <p><b>Teas & 1 pill</b></p> 
                            </div> 
                 </li>                    
            <%}%>    
        </ul>

     </div>
    </div>
    <div class="create-meal">
        <ul class="create-meal-container">
            <li><a href="/detox/new"><button class="add-meal">Add Meal</button></a></li>

        </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

</body>
</html>